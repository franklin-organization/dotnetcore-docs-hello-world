@page
@model IndexModel
@{
    ViewBag.Title = "Student Registration - Western Institute of Technology (WIT)";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional, for including a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="display-4">Western Institute of Technology (WIT)</h1>
            <p class="lead">Empowering education with technology.</p>
        </div>

        <!-- Registration Form -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3>Student Registration</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Register", "Student", FormMethod.Post))
                {
                    <div class="form-group mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
                        @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
                        @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="Email" class="form-label">Email Address</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter your email" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="Password" class="form-label">Password</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Create a password" })
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                }
            </div>
        </div>

        <!-- Footer -->
        <footer class="mt-5 text-center">
            <p>&copy; @DateTime.Now.Year Western Institute of Technology (WIT). All rights reserved.</p>
        </footer>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
