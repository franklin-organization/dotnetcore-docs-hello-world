@page
@model IndexModel
@{
    ViewBag.Title = "Western Institute of Technology (WIT)";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-9ndCyUa1zY8HkXQp5Sej5Rl5KkTuxs0n3lA7A4X+A5K6Z+Xr9AnUrk3PBEO79I+d" crossorigin="anonymous">
    <style>
        .program-details {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Title and Tagline -->
        <div class="text-center mb-5">
            <h1 class="display-4">Western Institute of Technology (WIT)</h1>
            <p class="lead">Empowering education with technology.</p>
        </div>

        <!-- Program Section -->
        <div class="row">
            <!-- Program 1 -->
            <div class="col-md-6 mb-4">
                <button class="btn btn-primary w-100" type="button" onclick="toggleDetails('program1-details')">
                    Bachelor of Information Technology
                </button>
                <div id="program1-details" class="program-details mt-3">
                    <p>Learn the foundations of software development, networking, and cloud computing.</p>
                    <form method="post" action="#">
                        <div class="form-group mb-3">
                            <label for="fullName1">Full Name</label>
                            <input type="text" id="fullName1" name="fullName" class="form-control" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email1">Email</label>
                            <input type="email" id="email1" name="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Apply Now</button>
                    </form>
                </div>
            </div>

            <!-- Program 2 -->
            <div class="col-md-6 mb-4">
                <button class="btn btn-success w-100" type="button" onclick="toggleDetails('program2-details')">
                    Diploma in Business Administration
                </button>
                <div id="program2-details" class="program-details mt-3">
                    <p>Master the skills needed to excel in today’s dynamic business environment.</p>
                    <form method="post" action="#">
                        <div class="form-group mb-3">
                            <label for="fullName2">Full Name</label>
                            <input type="text" id="fullName2" name="fullName" class="form-control" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email2">Email</label>
                            <input type="email" id="email2" name="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn-success">Apply Now</button>
                    </form>
                </div>
            </div>

            <!-- Program 3 -->
            <div class="col-md-6 mb-4">
                <button class="btn btn-warning w-100" type="button" onclick="toggleDetails('program3-details')">
                    Certificate in Hospitality Management
                </button>
                <div id="program3-details" class="program-details mt-3">
                    <p>Develop industry-leading hospitality skills and customer service excellence.</p>
                    <form method="post" action="#">
                        <div class="form-group mb-3">
                            <label for="fullName3">Full Name</label>
                            <input type="text" id="fullName3" name="fullName" class="form-control" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email3">Email</label>
                            <input type="email" id="email3" name="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn-warning">Apply Now</button>
                    </form>
                </div>
            </div>

            <!-- Program 4 -->
            <div class="col-md-6 mb-4">
                <button class="btn btn-danger w-100" type="button" onclick="toggleDetails('program4-details')">
                    Health Sciences Program
                </button>
                <div id="program4-details" class="program-details mt-3">
                    <p>Prepare for a rewarding career in healthcare and medical technology.</p>
                    <form method="post" action="#">
                        <div class="form-group mb-3">
                            <label for="fullName4">Full Name</label>
                            <input type="text" id="fullName4" name="fullName" class="form-control" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email4">Email</label>
                            <input type="email" id="email4" name="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn-danger">Apply Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5 text-center">
        <p>&copy; @DateTime.Now.Year Western Institute of Technology (WIT). All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle program details
        function toggleDetails(id) {
            const details = document.getElementById(id);
            if (details.style.display === "none" || details.style.display === "") {
                details.style.display = "block";
            } else {
                details.style.display = "none";
            }
        }
    </script>
</body>
</html>
