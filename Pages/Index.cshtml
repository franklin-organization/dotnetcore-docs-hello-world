@page
@model IndexModel
@{
    ViewBag.Title = "Western Institute of Technology (WIT)";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-9ndCyUa1zY8HkXQp5Sej5Rl5KkTuxs0n3lA7A4X+A5K6Z+Xr9AnUrk3PBEO79I+d" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <!-- Title and Tagline -->
        <div class="text-center mb-5">
            <h1 class="display-4">Western Institute of Technology (WIT)</h1>
            <p class="lead">Empowering education with technology.</p>
        </div>

        <!-- Detailed Program Section -->
        <div class="row">
            <!-- Program 1 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Bachelor of Information Technology
                    </div>
                    <div class="card-body">
                        <p>Learn the foundations of software development, networking, and cloud computing.</p>
                        <a href="/Programs/InformationTechnology" class="btn btn-primary">Learn More</a>
                        <a href="/Application/InformationTechnology" class="btn btn-outline-primary">Apply Now</a>
                    </div>
                </div>
            </div>

            <!-- Program 2 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        Diploma in Business Administration
                    </div>
                    <div class="card-body">
                        <p>Master the skills needed to excel in today’s dynamic business environment.</p>
                        <a href="/Programs/BusinessAdministration" class="btn btn-success">Learn More</a>
                        <a href="/Application/BusinessAdministration" class="btn btn-outline-success">Apply Now</a>
                    </div>
                </div>
            </div>

            <!-- Program 3 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        Certificate in Hospitality Management
                    </div>
                    <div class="card-body">
                        <p>Develop industry-leading hospitality skills and customer service excellence.</p>
                        <a href="/Programs/HospitalityManagement" class="btn btn-warning">Learn More</a>
                        <a href="/Application/HospitalityManagement" class="btn btn-outline-warning">Apply Now</a>
                    </div>
                </div>
            </div>

            <!-- Program 4 -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        Health Sciences Program
                    </div>
                    <div class="card-body">
                        <p>Prepare for a rewarding career in healthcare and medical technology.</p>
                        <a href="/Programs/HealthSciences" class="btn btn-danger">Learn More</a>
                        <a href="/Application/HealthSciences" class="btn btn-outline-danger">Apply Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5 text-center">
        <p>&copy; @DateTime.Now.Year Western Institute of Technology (WIT). All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>